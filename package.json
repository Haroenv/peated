{
  "private": true,
  "name": "peated",
  "version": "0.1.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build": "pnpm -r --filter='./apps/**' --filter='./packages/**' run build",
    "setup": "pnpm install && npm run db:migrate",
    "dev": "nf start",
    "dev:web": "PORT=3000 API_SERVER=http://localhost:4000 dotenv -e .env.local -- pnpm --filter='./apps/web' dev",
    "dev:api": "python -m uvicorn peated.main:app --reload --port 4000",
    "dev:api-old": "PORT=4000 dotenv -e .env.local -- pnpm --filter='./apps/api' dev",
    "db": "dotenv -e .env.local -- pnpm --filter='./apps/api' db",
    "db:migrate": "dotenv -e .env.local -- pnpm --filter='./apps/api' db:migrate",
    "db:generate": "dotenv -e .env.local -- pnpm --filter='./apps/api' db:generate",
    "format": "run-p format:*",
    "format:frontend": "prettier --write --cache frontend",
    "format:backend": "scripts/format.sh",
    "mocks": "dotenv -e .env.local -- pnpm --filter='./apps/api' mocks",
    "user": "dotenv -e .env.local -- pnpm --filter='./apps/api' user",
    "scraper": "pnpm --filter './apps/scraper' scraper",
    "price-scraper": "pnpm --filter './apps/scraper' prices",
    "typecheck": "pnpm -r --parallel run typecheck",
    "test": "pnpm -r --stream run test",
    "test:ci": "CI=true pnpm -r --stream run test",
    "token": "dotenv -e .env.local -- pnpm --filter='./apps/api' token",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "lint": "eslint --cache ."
  },
  "author": "David Cramer",
  "license": "Apache-2.0",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.41.0",
    "eslint-plugin-react": "^7.32.2",
    "foreman": "^3.0.1",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "pnpm": "^8.6.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "simple-git-hooks": "^2.8.1"
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "volta": {
    "node": "18.16.0",
    "pnpm": "8.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "{apps,packages}/**/*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  }
}
