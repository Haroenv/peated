{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "node_modules/.cache/metro/**",
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["**/*.{ts,tsx,js,jsx}"],
      "passThroughEnv": ["DATABASE_URL", "JWT_SECRET"]
    },
    "typecheck": {}
  },
  "globalEnv": [
    "DEBUG",
    "HOST",
    "PORT",
    "API_SERVER",
    "URL_PREFIX",
    "VERSION",
    "GOOGLE_CLIENT_ID",
    "SENTRY_DSN",
    "FATHOM_SITE_ID",
    "API_SERVER",
    "FATHOM_SITE_ID"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "CORS_HOST",
    "DATABASE_URL",
    "JWT_SECRET",
    "SESSION_SECRET",
    "npm_lifecycle_event"
  ]
}
