{
  "private": true,
  "name": "api",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node --require dotenv/config ./src/server.ts",
    "db": "ts-node --require dotenv/config ./src/bin/db.ts",
    "db:deploy": "npm run db:migrate",
    "db:migrate": "ts-node --require dotenv/config ./src/bin/db.ts migrate",
    "db:generate": "npx drizzle-kit generate:pg",
    "mocks": "ts-node --require dotenv/config ./src/bin/mocks.ts",
    "user": "ts-node --require dotenv/config ./src/bin/user.ts",
    "start": "ts-node --require dotenv/config ./src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "dotenv -e .env.test -- vitest --single-thread"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^10.1.1",
    "@fastify/multipart": "^7.6.0",
    "@fastify/one-line-logger": "^1.2.0",
    "@google-cloud/storage": "^6.10.1",
    "@paralleldrive/cuid2": "^2.2.0",
    "@peated/shared": "workspace:*",
    "@sentry/node": "^7.51.0",
    "@sentry/profiling-node": "^1.0.2",
    "@sentry/utils": "^7.51.0",
    "@swc/core": "^1.3.60",
    "@swc/helpers": "^0.5.1",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.10.1",
    "bcrypt": "^5.1.0",
    "commander": "^10.0.1",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "drizzle-kit": "^0.18.1",
    "drizzle-orm": "^0.26.5",
    "fastify": "^4.17.0",
    "fastify-plugin": "^4.5.0",
    "form-data-encoder": "^3.0.0",
    "formdata-node": "^5.0.0",
    "google-auth-library": "^8.8.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "mime-types": "^2.1.35",
    "nodemon": "^2.0.22",
    "pg": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "regenerator-runtime": "^0.13.11",
    "sharp": "^0.32.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.29.8",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.21.1"
  }
}
