{
  "private": true,
  "name": "api",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node --require dotenv/config ./src/server.ts",
    "db": "ts-node --require dotenv/config ./src/bin/db.ts",
    "db:deploy": "npm run db:migrate",
    "db:migrate": "ts-node --require dotenv/config ./src/bin/db.ts migrate",
    "db:generate": "npx drizzle-kit generate:pg",
    "mocks": "ts-node --require dotenv/config ./src/bin/mocks.ts",
    "user": "ts-node --require dotenv/config ./src/bin/user.ts",
    "start": "ts-node --require dotenv/config ./src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "dotenv -e .env.test -- vitest --no-threads",
    "test:ci": "dotenv -e .env.test -- vitest --no-threads --coverage"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^10.1.1",
    "@fastify/multipart": "^7.7.3",
    "@fastify/one-line-logger": "^1.2.0",
    "@google-cloud/storage": "^6.12.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@peated/design": "workspace:*",
    "@peated/shared": "workspace:*",
    "@peated/tsconfig": "workspace:*",
    "@sentry/node-experimental": "^7.69.0",
    "@sentry/profiling-node": "^1.2.1",
    "@sentry/utils": "^7.69.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18.17.15",
    "@types/nodemailer": "^6.4.10",
    "@types/pg": "^8.10.2",
    "@vitest/coverage-v8": "^0.34.4",
    "bcrypt": "^5.1.1",
    "commander": "^10.0.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.19.13",
    "drizzle-orm": "^0.28.6",
    "fastify": "^4.23.0",
    "fastify-plugin": "^4.5.1",
    "form-data-encoder": "^3.0.0",
    "formdata-node": "^5.0.1",
    "google-auth-library": "^8.9.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.0.1",
    "mime-types": "^2.1.35",
    "nodemailer": "^6.9.5",
    "nodemon": "^2.0.22",
    "pg": "^8.11.3",
    "pino-pretty": "^10.2.0",
    "regenerator-runtime": "^0.13.11",
    "sharp": "^0.32.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.4",
    "zod": "^3.22.2",
    "zod-to-json-schema": "^3.21.4"
  }
}
