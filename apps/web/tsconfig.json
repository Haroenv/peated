{
  "extends": "@peated/tsconfig/tsconfig.json",
  "include": ["remix.env.d.ts", "app/**/*.ts", "app/**/*.tsx", "server.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  },
  "ts-node": {
    "swc": true,
    "require": ["vite-tsconfig-paths/register"]
  }
}
