{
  "private": true,
  "name": "web",
  "scripts": {
    "assets": "npx @svgr/cli --out-dir app/components/assets -- app/assets",
    "assets:watch": "npm-watch assets",
    "build": "npm run build:remix && npm run build:server && npm run build:assets && npm run build:sitemap",
    "build:remix": "cross-env NODE_ENV=production remix build --sourcemap",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "build:assets": "npm run assets",
    "build:sitemap": "remix-sitemap",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "cross-env NODE_ENV=development nodemon --exec 'esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle && node --require dotenv/config ./build/server.js' --watch ./server.ts",
    "dev:assets": "npm run assets && npm run assets:watch",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fontsource/raleway": "^5.0.14",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.2",
    "@isaacs/express-prometheus-middleware": "^1.2.1",
    "@peated/design": "workspace:*",
    "@peated/shared": "workspace:*",
    "@peated/tsconfig": "workspace:*",
    "@react-oauth/google": "^0.11.1",
    "@remix-run/css-bundle": "^2.1.0",
    "@remix-run/dev": "^2.1.0",
    "@remix-run/eslint-config": "^2.1.0",
    "@remix-run/express": "^2.1.0",
    "@remix-run/node": "^2.1.0",
    "@remix-run/react": "^2.1.0",
    "@remix-run/serve": "^2.1.0",
    "@rollup/plugin-replace": "^5.0.4",
    "@sentry/react": "^7.74.1",
    "@sentry/remix": "^7.74.1",
    "@sentry/vite-plugin": "^2.8.0",
    "@svgr/cli": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@tanstack/react-query": "^4.36.1",
    "@types/compression": "^1.7.4",
    "@types/express": "^4.17.20",
    "@types/leaflet": "^1.9.7",
    "@types/morgan": "^1.9.7",
    "@types/pica": "^9.0.3",
    "@types/react": "^18.2.30",
    "@types/react-avatar-editor": "^13.0.1",
    "@types/react-dom": "^18.2.14",
    "@types/react-router-dom": "^5.3.3",
    "autoprefixer": "^10.4.16",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "esbuild": "^0.18.20",
    "express": "^4.18.2",
    "framer-motion": "^10.16.4",
    "isbot": "latest",
    "isomorphic-dompurify": "^1.9.0",
    "leaflet": "^1.9.4",
    "marked": "^9.1.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "npm-watch": "^0.11.0",
    "pica": "^9.0.1",
    "postcss": "^8.4.31",
    "prom-client": "^14.2.0",
    "react": "^18.2.0",
