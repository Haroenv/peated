{
  "private": true,
  "name": "server",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node --require dotenv/config ./src/server.ts",
    "db:migrate": "run-p db:migrate:*",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma db push --accept-data-loss",
    "generate-token": "ts-node --require dotenv/config ./src/bin/generate-token.ts",
    "create-user": "ts-node --require dotenv/config ./src/bin/create-user.ts",
    "postinstall": "npx prisma generate",
    "tsc": "tsc",
    "test": "run-s db:migrate:test test:vitest",
    "test:vitest": "dotenv -e .env.test -- vitest --no-threads"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@fastify/cors": "^8.2.1",
    "@fastify/helmet": "^10.1.0",
    "@fastify/multipart": "^7.6.0",
    "@google-cloud/storage": "^6.9.5",
    "@prisma/client": "^4.12.0",
    "bcrypt": "^5.1.0",
    "cuid": "^3.0.0",
    "fastify": "^4.15.0",
    "fastify-plugin": "^4.5.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.3.44",
    "@swc/helpers": "^0.4.14",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "pino-pretty": "^10.0.0",
    "prisma": "^4.12.0",
    "regenerator-runtime": "^0.13.11",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "vite-tsconfig-paths": "^4.0.8",
    "vitest": "^0.29.8"
  }
}
